<?xml version="1.0" encoding="utf-8"?>
<com.likebamboo.widget.SearchAutoCompleteTvLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_auto_complete_tv_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/search_edit_back_ib"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/go_back"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <com.likebamboo.widget.MyAutoCompleteTextView
            android:id="@+id/search_edit_keywords_AcTv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/search_d"
            android:drawablePadding="3dp"
            android:hint="@string/search_hint"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/search_edit_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="8dip"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textIsSelectable="false" />
    </LinearLayout>

</com.likebamboo.widget.SearchAutoCompleteTvLayout>